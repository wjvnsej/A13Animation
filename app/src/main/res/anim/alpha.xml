<?xml version="1.0" encoding="utf-8"?>

<!--
alpha : 투명도 조절
    1에 가까울수록 선명해지고, 0에 가까울수록 투명해진다.
-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0"
        android:duration="2000"
        android:repeatCount="infinite"/>
</set>